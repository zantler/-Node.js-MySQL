{
  "compilerOptions": {
    // Entradas y salidas
    "rootDir": "src",
    "outDir": "dist",

    // Ambiente Node moderno
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node"],

    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Chequeos estrictos
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    // Necesario para imports de paquetes comunes (Express, dotenv, etc.)
    "esModuleInterop": true
  },
  "include": ["src"]
}
